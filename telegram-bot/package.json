{
  "name": "cocoon-gpu-pool-bot",
  "version": "1.0.0",
  "description": "Telegram Bot for Cocoon GPU Pool notifications, management and statistics",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t cocoon-gpu-pool-bot .",
    "docker:run": "docker run --env-file .env cocoon-gpu-pool-bot"
  },
  "keywords": [
    "telegram",
    "bot",
    "cocoon",
    "gpu",
    "pool",
    "ton",
    "notifications"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "telegraf": "^4.16.3",
    "dotenv": "^16.4.5",
    "ioredis": "^5.4.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20",
    "node-cron": "^3.0.3",
    "winston": "^3.14.2",
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
